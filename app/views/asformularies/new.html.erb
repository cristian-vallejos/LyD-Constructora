


<div class="row">
	
	  <div class="col-md-4">
	  <h3>Nuevo Formulario de Atención Social</h3>
	  	<%= render 'form', asformulary: @asformulary %>

	  </div>
	  <div class="col-md-8">

	<ul class="nav nav-pills">
	  <li class="active"><a href="#asociales" data-toggle="tab" aria-expanded="true">Historial AS</a></li>
	  <li class=""><a href="#beneficios" data-toggle="tab" aria-expanded="false">Beneficios</a></li>
	  <li class=""><a href="#prestamos" data-toggle="tab" aria-expanded="false">Préstamos</a></li>
	  <li class=""><a href="#capacitaciones" data-toggle="tab" aria-expanded="false">Capacitaciones</a></li>
	</ul>


	<div id="myTabContent" class="tab-content">

		<div class="tab-pane fade active in" id="asociales">

		<div class="table-responsive">
		  	<h3>Historial de Atención Social</h3>

			  <table class="table">
			    <thead>
				    <tr>
				      
				      <th>Asistente Social</th>
				      <th>Obra</th>
				      <th>Rut atendido AS</th>
				      <th>Nombre atendido</th>
				      <th>Apellido Paterno</th>
				      <th>Apellido Materno</th>
				      <th>Descripción</th>
				      <th>Solución</th>
				    </tr>
				  </thead>

				  <tbody>
				  	<% logas = Loga.where(:rut_atendido => params[:asformulary][:rut_atendido]) %>
				    <% logas.each do |loga| %>
				      <tr>
				        
				        <td><%= loga.user_name %></td>
				        <td><%= loga.codigo_obra %></td>
				        <td><%= loga.rut_atendido %></td>
				        <td><%= loga.nombre_atendido %></td>
				        <td><%= loga.apellido_paterno_atendido %></td>
				        <td><%= loga.apellido_materno_atendido %></td>
				        <td><%= loga.descripcion %></td>
				        <td><%= loga.solucion %></td>
				      </tr>
				    <% end %>
				  </tbody>
			  </table>
			</div>

		</div>

		<div class="tab-pane fade active in" id="beneficios">


		</div>


		<div class="tab-pane fade active in" id="prestamos">


		</div>

		<div class="tab-pane fade active in" id="capacitaciones">


		</div>




	</div>



		  	
	  </div>



</div>

<%= link_to 'volver', asformularies_path %>
