<p id="notice"><%= notice %></p>

<div class="container">

  <div class="content">
    
    <div style="box-shadow:0px 0px 15px rgba(0,0,0,0.1);">

<h1>Áreas de Beneficio</h1>

<div align="center">

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
    </tr>
  </thead>

  <tbody>
    <% @areabenefits.each do |areabenefit| %>
      <tr>
        <td><%= areabenefit.nombre %></td>
        <%if areabenefit.is_active  %>
        <td> Activo </td>
        <%else %>
        <td> No activo</td>
        <%end %>

        <%# if current_lyduser.admin_role? %>
        <td><%= link_to 'Mostrar', areabenefit %></td>
        <td><%= link_to 'Actualizar', edit_areabenefit_path(areabenefit) %></td>
        <td><%= link_to 'Eliminar', areabenefit, method: :delete, data: { confirm: 'Está seguro?' } %>
        <td><%= link_to 'Activar/desactivar', is_active_areabenefit_path(areabenefit) %>
        <%# end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button onclick="location.href='<%= new_areabenefit_path %>'" type="button" class="btn btn-green btn-lg btn-block">Crear Nueva Área</button>

</div>


</div>
</div>
</div>
